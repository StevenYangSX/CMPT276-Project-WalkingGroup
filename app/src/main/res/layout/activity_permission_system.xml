<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionSystem"
    tools:layout_editor_absoluteY="81dp">


    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/myPermissionList"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginBottom="101dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPointsTxt">

    </com.baoyz.swipemenulistview.SwipeMenuListView>

    <ImageButton
        android:id="@+id/imageBtnPermissonLIst"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userPointsTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_action_email" />

    <TextView
        android:id="@+id/userPointsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:text="@string/base_title"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/myPermissionList"
        app:layout_constraintEnd_toStartOf="@+id/imageBtnPermissonLIst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="532dp"
        android:text="@string/permission_view_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/myPermissionList"
        app:layout_constraintStart_toEndOf="@+id/myPermissionList"
        app:layout_constraintTop_toBottomOf="@+id/imageBtnPermissonLIst" />

</android.support.constraint.ConstraintLayout>